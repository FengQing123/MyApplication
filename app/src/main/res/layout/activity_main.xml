<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.fengq.myapplication.activity.MainActivity">

        <Button
            android:id="@+id/btn_screen_adaptation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="屏幕适配" />

        <Button
            android:id="@+id/btn_okhttp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_screen_adaptation"
            android:onClick="onClick"
            android:text="okHttp测试" />

        <com.example.fengq.myapplication.widget.LongPressTextView
            android:id="@+id/tv_longPress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_okhttp"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:text="Long Press" />

        <Button
            android:id="@+id/btn_retrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_longPress"
            android:onClick="onClick"
            android:text="retrofit测试" />

        <Button
            android:id="@+id/btn_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_retrofit"
            android:onClick="onClick"
            android:text="动画测试" />

        <Button
            android:id="@+id/btn_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_animation"
            android:onClick="onClick"
            android:text="权限检测" />

        <Button
            android:id="@+id/btn_compress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_permission"
            android:onClick="onClick"
            android:text="压缩图片质量大小" />

        <Button
            android:id="@+id/btn_ndk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_compress"
            android:onClick="onClick"
            android:text="ndk的使用" />

        <Button
            android:id="@+id/btn_barrage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ndk"
            android:onClick="onClick"
            android:text="弹幕的使用" />

        <Button
            android:id="@+id/btn_MPAndroid_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_barrage"
            android:onClick="onClick"
            android:text="MPAndroidChart的使用" />

        <Button
            android:id="@+id/btn_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_MPAndroid_chart"
            android:onClick="onClick"
            android:text="Android控件的使用" />

        <Button
            android:id="@+id/btn_blueTooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_view"
            android:onClick="onClick"
            android:text="蓝牙使用" />

        <Button
            android:id="@+id/btn_define_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_blueTooth"
            android:onClick="onClick"
            android:text="自定义View" />

        <Button
            android:id="@+id/btn_define_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_define_view"
            android:onClick="onClick"
            android:text="折线图" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_define_chart"
            android:onClick="onClick"
            android:text="观察者" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_update"
            android:onClick="onClick"
            android:text="手机自带定位" />

        <Button
            android:id="@+id/btn_learn_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_location"
            android:onClick="onClick"
            android:text="屏幕UI学习" />

    </RelativeLayout>
</ScrollView>
