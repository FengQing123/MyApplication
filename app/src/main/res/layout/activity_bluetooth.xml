<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="connect" />

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="disconnect" />

        <Button
            android:id="@+id/btn_open_heartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="打开心率" />

        <Button
            android:id="@+id/btn_close_heartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="关闭心率" />

        <Button
            android:id="@+id/btn_get_heartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取心率、步数、里程等数据" />

        <Button
            android:id="@+id/btn_get_real_time_heartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取/关闭实时心率数据" />

        <Button
            android:id="@+id/btn_get_electricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="查看手环电量" />

        <Button
            android:id="@+id/btn_set_steps_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置计步参数" />

        <Button
            android:id="@+id/btn_set_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置手环时间" />

        <Button
            android:id="@+id/btn_get_turn_wrist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="读取翻腕切屏功能是否开启" />

        <Button
            android:id="@+id/btn_set_turn_wrist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置翻腕切屏功能开启/关闭" />

        <Button
            android:id="@+id/btn_get_raise_hand_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="读取抬手亮屏功能是否开启" />

        <Button
            android:id="@+id/btn_set_raise_hand_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置抬手亮屏功能开启/关闭" />

        <Button
            android:id="@+id/btn_set_open_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置手环启动快门功能" />

        <Button
            android:id="@+id/btn_set_close_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="设置手环关闭快门功能" />

        <Button
            android:id="@+id/btn_send_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="发送日期数据0x26" />

        <Button
            android:id="@+id/btn_request_params"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="请求读取参数0x02" />


        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="hhhhhhhhh" />

    </LinearLayout>
</ScrollView>